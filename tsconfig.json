{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "tests/babel-register.js"
  ],
  "include": [
    "src",
    "types",
    "tests"
  ]
}
